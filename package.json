{
  "name": "template-dir",
  "version": "1.0.0",
  "description": "Copies files and folders from source directory to destination directory (all directories recursively or just files from the source directory) with template style from template-file",
  "main": "./dest/index.js",
  "scripts": {
    "pretest": "npm run lint & npm run babel",
    "test": "nyc ava",
    "lint": "eslint lib test",
    "babel": "babel lib -d dest",
    "prepublish": "npm run babel",
    "prepush": "npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "exclude": [
      "test",
      "dest"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aichbauer/node-template-dir.git"
  },
  "author": "Lukas Aichbauer <l.aichbauer@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aichbauer/node-template-dir/issues"
  },
  "keywords": [
    "recursive",
    "file",
    "directoy",
    "copy",
    "template",
    "template-file",
    "template-dir"
  ],
  "homepage": "https://github.com/aichbauer/node-template-dir#readme",
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.2.1",
    "coveralls": "^2.12.0",
    "eslint": "^3.17.1",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-plugin-import": "^2.2.0",
    "fs-extra": "^4.0.2",
    "husky": "^0.13.2",
    "nyc": "^10.1.2"
  },
  "dependencies": {
    "path-is-absolute": "^1.0.1",
    "template-file": "^3.0.1"
  }
}
